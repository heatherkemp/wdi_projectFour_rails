<div class="row main">
  <div class="small-11 small-centered large-4 columns">
    <div id="newUserBox">
        <p class="special">Create Your Account</p>
<%= form_for @user, url: "/users", :method => :post do |f| %>
        <%= f.label "Name:", nil, class: 'loginInputLabel' %>
        <%= f.text_field :name %>
        <%= f.label "Email:", nil, class: 'loginInputLabel' %>
        <%= f.email_field :email %>
        <%= f.label "Password:", nil, class: 'loginInputLabel' %>
        <%= f.password_field :password %>
        <%= f.submit "Create Account", class: "formButton button tiny radius" %>
        <% end %>
    </div>
  </div>
</div>